<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/stylesheets/style.css">
  <title>Skills</title>
</head>
<body>
  <h1>Skills List</h1>
  <% if(error) { %>
    <h2><%= error %></h2>
  <% } %>
  <ul>
    <% skills.forEach(function(skill) { %>
      <li>
        <a href="/skills/<%= skill._id %>"><%= skill.text %></a>
          - 
        <%= skill.done ? 'Yes' : 'In Progress' %>
      </li>
    <% }) %>
  </ul>
</body>
</html>